// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Notify {
  id        Int      @id @default(autoincrement())
  email     String   @db.VarChar(100)
  createdAt DateTime @default(now())
}

model User {
  id                  String        @id @default(uuid())
  name                String        @unique @db.VarChar(100)
  role                Role          @default(USER)
  // team        Team[]
  email               String        @unique @db.VarChar(100)
  college             String        @db.VarChar(100)
  password            String        @default("")
  sentInvitations     Invitations[] @relation("sentInvitations")
  receivedInvitations Invitations[] @relation("receivedInvitations")
}

model Event {
  venue           String
  prize           Int
  // teams           Team[]
  dateTo          DateTime
  timeTo          DateTime
  eventId         String   @id @default(uuid())
  timeFrom        DateTime
  maxTeams        Int
  dateFrom        DateTime
  eventName       String   @db.VarChar(100)
  minPlayers      Int
  maxPlayers      Int
  description     String
  pricePerPlayer  Int
  teamsRegistered Int
}

model Invitations {
  id       Int              @id @default(autoincrement())
  toId     String
  toUser   User             @relation("receivedInvitations", references: [id], fields: [toId])
  fromId   String
  sentAt   DateTime         @default(now())
  status   InvitationStatus @default(PENDING)
  eventId  String
  fromUser User             @relation("sentInvitations", references: [id], fields: [fromId])
}

model Team {
  teamId String @id @default(uuid())
  // event  Event  @relation(references: [eventId], fields: [eventId])
  // userId User   @relation(references: [id], fields: [userId])
}

// Enums
enum InvitationStatus {
  ACCEPTED
  PENDING
  REJECTED
  EXPIRED
  CANCELLED
  REVOKED
}

enum Role {
  USER
  ADMIN
  ADMIN_SUPER
}
